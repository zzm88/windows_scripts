{
    "manifest_version": 3,
    "name": "Video Upload Helper",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage",
      "file://*"
    ],
    "host_permissions": [
      "file://*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }