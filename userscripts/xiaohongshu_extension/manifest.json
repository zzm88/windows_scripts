{
    "manifest_version": 3,
    "name": "Video Upload Helper",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage",
      "file://*"
    ],
    "host_permissions": [
      "file://*",
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }]
}